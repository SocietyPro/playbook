doctype html
html(ng-app="playbookModule" layout-fill)
  head
    title SocietyPro Playbook
    link(rel="stylesheet", href="assets/playbook.css")
    link(rel="stylesheet", href="bower_components/sopro-material/css/angular-material.css")
    link(rel="stylesheet", href="bower_components/angular-material/themes/indigo-theme.css")
    link(rel="stylesheet", href="bower_components/roboto/2014/roboto-woff.css")
    script(src="//localhost:35729/livereload.js", type="text/javascript")
    script(src="bower_components/hammerjs/hammer.min.js", type="text/javascript")
    script(src="bower_components/angular/angular.min.js", type="text/javascript")
    script(src="bower_components/angular-animate/angular-animate.min.js", type="text/javascript")
    script(src="bower_components/angular-aria/angular-aria.min.js", type="text/javascript")
    script(src="bower_components/angular-material/angular-material.js", type="text/javascript")
    script(src="assets/playbook.js", type="text/javascript")
  body(layout="horizontal", ng-controller="playbookCtrl" layout-fill)
    md-sidenav.md-sidenav-left.md-whiteframe-z2(
      component-id="left",
      is-locked-open="false",
    )
      md-toolbar.md-theme-indigo
        h1.md-toolbar-tools(
          ng-click="close()", 
        ) Table of Contents
      md-content.md-padding(ng-controller="LeftCtrl")
        section#toc 
          // TOC 
    div#main(layout="vertical" layout-fill)
      md-toolbar.md-theme-indigo
        span.md-toolbar-tools(layout="horizontal")
          md-button(
            ng-click="toggleLeft()",
            flex="20",
            class="md-raised"
          ) TOC
          span(flex="60", offset="20", id="playbookTitle") Society<super>PRO</super> Playbook
      md-content(flex)
        div#innerContent
          section#playbook
            include jade/demo-cards.jade
            include jade/demo-card-2.jade
            include:md markdown/body.md
            include:md markdown/footer.md